          map.addAnnotation(annotation);
        .fl.w-100.w-70-ns
          .flex.flex-row.flex-wrap
            .w-50.pa4
              img(src="/image/smartstart.png" height="auto" width="100%").br2.shadow-2.dim.pointer
            
